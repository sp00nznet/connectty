# Connectty Environment Configuration

# Database
DB_PASSWORD=connectty_secret

# JWT Configuration
JWT_SECRET=change-this-in-production-to-a-random-string
JWT_EXPIRY=24h

# Master key for credential encryption (auto-generated if not provided)
MASTER_KEY=

# Web client port
WEB_PORT=8080

# CORS origin (use specific domain in production)
CORS_ORIGIN=*

# Active Directory Authentication (optional)
AD_ENABLED=false
AD_URL=ldap://your-ad-server:389
AD_BASE_DN=DC=corp,DC=example,DC=com
AD_DOMAIN=corp.example.com

# ===========================================
# Desktop App - Cloud Sync OAuth (optional)
# ===========================================
# These enable Google Drive and GitHub Gist sync features
# Leave empty to disable these features

# Google Drive Sync (OAuth 2.0 Client)
# Create at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub Gist Sync (OAuth App)
# Create at: https://github.com/settings/developers
# Note: We use GH_ prefix because GITHUB_ is reserved in some environments
GH_OAUTH_CLIENT_ID=
GH_OAUTH_CLIENT_SECRET=
