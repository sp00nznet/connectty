{
  "name": "@connectty/desktop",
  "version": "1.0.0",
  "description": "Connectty Desktop SSH Client",
  "author": "Connectty",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run build:main && electron .",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux deb",
    "clean": "rimraf dist"
  },
  "build": {
    "appId": "com.connectty.desktop",
    "productName": "Connectty",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "icon": "assets/icon.png",
      "category": "Network"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@connectty/shared": "1.0.0",
    "better-sqlite3": "^9.3.0",
    "electron-store": "^8.1.0",
    "node-pty": "^1.0.0",
    "node-rdpjs-2": "^0.3.5",
    "serialport": "^12.0.0",
    "ssh2": "^1.15.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/ssh2": "^1.11.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "28.1.0",
    "electron-builder": "^24.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  }
}
